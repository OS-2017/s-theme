{% if gfacet is not null and gfacet == search_facet_2 %}
	{% set ph = search_placeholder_text_2 %}
{% else %}
	{% set ph = search_placeholder_text_1 %}
{% endif %}

{# Magnifying icon at mobile sizes #}
